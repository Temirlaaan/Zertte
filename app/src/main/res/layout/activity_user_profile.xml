<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.UserProfileActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/rounded_bottom_corners2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_back"
                android:layout_centerHorizontal="true"
                android:background="@drawable/stroke"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_margin="10dp"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:elevation="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/tv_profile"
                app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/greetings"
                android:layout_below="@+id/tv_profile"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:elevation="20dp"
                android:contentDescription="@string/image" />

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="First name"
                android:background="@drawable/stroke"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"
                android:textColorHint="@color/gray"
                android:autofillHints="text"
                android:layout_below="@+id/card"
                android:paddingStart="16dp"
                android:inputType="text"
                tools:ignore="LabelFor,RtlSymmetry"
                android:layout_marginTop="48dp"/>

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Last name"
                android:background="@drawable/stroke"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"
                android:textColorHint="@color/gray"
                android:autofillHints="text"
                android:layout_below="@+id/et_first_name"
                android:paddingStart="16dp"
                android:inputType="text"
                tools:ignore="LabelFor,RtlSymmetry"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Email"
                android:background="@drawable/stroke"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"
                android:textColorHint="@color/gray"
                android:autofillHints="emailAddress"
                android:layout_below="@+id/et_last_name"
                android:paddingStart="16dp"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor,RtlSymmetry"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:hint="Phone number"
                android:background="@drawable/stroke"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="normal"
                android:textColorHint="@color/gray"
                android:autofillHints="phone"
                android:layout_below="@+id/et_email"
                android:paddingStart="16dp"
                android:inputType="phone"
                tools:ignore="LabelFor,RtlSymmetry"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/et_mobile_number"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Male"
                    android:layout_margin="5dp"
                    android:button="@drawable/drawable_gender_tab_selector"
                    android:background="@drawable/drawable_gender_tab_selector"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:button="@drawable/drawable_gender_tab_selector"
                    android:background="@drawable/drawable_gender_tab_selector"
                    android:text="Female"
                    android:layout_margin="5dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rg_gender"
                android:layout_marginTop="32dp"
                android:text="Save"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner"
                android:textSize="15sp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
